{
  "name": "@quant/backtester",
  "version": "1.0.0",
  "description": "毫秒级事件驱动回测引擎，支持策略热插拔、精确资金费率模拟、动态滑点模型",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.9"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "quant",
    "trading",
    "backtester",
    "backtest",
    "event-driven",
    "strategy",
    "clickhouse",
    "funding-rate",
    "slippage",
    "liquidation",
    "margin",
    "leverage"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
