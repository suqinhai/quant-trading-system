{
  "name": "@quant/risk",
  "version": "1.0.0",
  "description": "风控中心 - Risk Management Center for Position and Order Control",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rimraf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@quant/exchange": "workspace:*",
    "decimal.js": "^10.4.3",
    "eventemitter3": "^5.0.1",
    "pino": "^8.18.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
