{
  "name": "@quant/data-downloader",
  "version": "1.0.0",
  "description": "批量下载交易所历史数据到 ClickHouse，支持断点续传和增量更新",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "data-downloader": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "download": "node --loader ts-node/esm src/cli.ts download",
    "update": "node --loader ts-node/esm src/cli.ts update",
    "status": "node --loader ts-node/esm src/cli.ts status"
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.9",
    "ccxt": "^4.2.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "eventemitter3": "^5.0.1",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "quant",
    "trading",
    "data-downloader",
    "clickhouse",
    "ccxt",
    "binance",
    "bybit",
    "okx",
    "kline",
    "funding-rate",
    "historical-data"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
