{
  // 继承根目录的 TypeScript 配置
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    // 输出目录
    "outDir": "./dist",
    // 根目录
    "rootDir": "./src",
    // 复合项目支持（用于项目引用）
    "composite": true,
    // 增量编译信息文件
    "tsBuildInfoFile": "./.tsbuildinfo"
  },

  // 只编译 src 目录
  "include": ["src/**/*.ts"],

  // 排除测试文件
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
