{
  "name": "@quant/monitor",
  "version": "1.0.0",
  "description": "监控告警中心 - System Monitoring and Alert Management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rimraf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "decimal.js": "^10.4.3",
    "eventemitter3": "^5.0.1",
    "pino": "^8.18.0",
    "nodemailer": "^6.9.8",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.14",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
